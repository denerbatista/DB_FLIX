        <div id="sub__header">
            <%= filmesDetalhes.nome %>
        </div>
        <section id="details_container">
            <iframe
  width="560"
  height="315"
  src="https://www.youtube.com/embed/<%= filmesDetalhes.iframe %>"
  title="YouTube video player"
  frameborder="0"
  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
  allowfullscreen
></iframe>
            <table> 
                <thead> 
                    <th colspan="2"> Detalhes </th>
                </thead>
                <tbody> 
                    <tr> 
                        <td> Diretor </td>
                        <td> <%= filmesDetalhes.diretor %>  </td>
                    </tr>
                    <tr>
                        <td> Duração </td>
                        <td> <%= filmesDetalhes.duracao %> minutos  </td>
                    </tr>
                    <tr>
                        <td> Lançament </td>
                        <td> <%= filmesDetalhes.ano %> </td>
                    </tr>
                </tbody>
                <tfoot> </tfoot>
            </table>

